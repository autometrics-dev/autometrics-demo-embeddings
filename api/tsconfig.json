{
  "compilerOptions": {
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "NodeNext",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "target": "ES2022",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "examples"
  ]
}